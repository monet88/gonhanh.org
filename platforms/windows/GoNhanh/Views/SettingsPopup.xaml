<Window x:Class="GoNhanh.Views.SettingsPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cài đặt"
        Width="280" Height="260"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Deactivated="Window_Deactivated">

    <Border Background="White"
            CornerRadius="8"
            BorderBrush="#E5E7EB"
            BorderThickness="1"
            Padding="16">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
        </Border.Effect>

        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Cài đặt GoNhanh"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="0,0,0,12"/>

            <Separator Margin="0,0,0,12"/>

            <!-- Input Method -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Kiểu gõ:"
                           VerticalAlignment="Center"
                           Width="100"/>
                <ComboBox x:Name="MethodCombo"
                          Width="140"
                          SelectionChanged="MethodCombo_SelectionChanged">
                    <ComboBoxItem Content="Telex" Tag="0"/>
                    <ComboBoxItem Content="VNI" Tag="1"/>
                </ComboBox>
            </StackPanel>

            <!-- Checkboxes -->
            <CheckBox x:Name="ModernToneCheck"
                      Content="Kiểu gõ mới (oà)"
                      Margin="0,0,0,6"
                      Checked="ModernToneCheck_Changed"
                      Unchecked="ModernToneCheck_Changed"/>

            <CheckBox x:Name="ShortcutCheck"
                      Content="Bật viết tắt"
                      Margin="0,0,0,6"
                      Checked="ShortcutCheck_Changed"
                      Unchecked="ShortcutCheck_Changed"/>

            <CheckBox x:Name="AutoStartCheck"
                      Content="Khởi động cùng Windows"
                      Margin="0,0,0,12"
                      Checked="AutoStartCheck_Changed"
                      Unchecked="AutoStartCheck_Changed"/>

            <Separator Margin="0,0,0,12"/>

            <!-- Info -->
            <TextBlock Text="Phím tắt: Ctrl+Shift"
                       Foreground="#6B7280"
                       FontSize="12"/>
            <TextBlock x:Name="VersionText"
                       Foreground="#6B7280"
                       FontSize="12"/>
        </StackPanel>
    </Border>
</Window>
